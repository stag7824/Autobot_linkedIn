# ═══════════════════════════════════════════════════════════════════════════════
#                    LINKEDIN EASY APPLY BOT CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────────────────────
# ENVIRONMENT (development | production)
# In production: 2-3 min delay between applications to avoid Gemini API rate limits
# In development: 5-15 sec delay for faster testing
# ─────────────────────────────────────────────────────────────────────────────────
NODE_ENV=development

# ─────────────────────────────────────────────────────────────────────────────────
# AUTHENTICATION
# ─────────────────────────────────────────────────────────────────────────────────
USER_ID=your_email@example.com
USER_PASSWORD="your_password"

# ─────────────────────────────────────────────────────────────────────────────────
# BOT SETTINGS
# ─────────────────────────────────────────────────────────────────────────────────
DAILY_LIMIT=20
HEADLESS=false
SAVE_PATH=./data/
# Skip resume upload - LinkedIn already has resume saved
SKIP_RESUME_UPLOAD=true

# ─────────────────────────────────────────────────────────────────────────────────
# SEARCH FILTERS - Job Search Configuration
# ─────────────────────────────────────────────────────────────────────────────────

# Search terms (JSON array of job titles to search for)
SEARCH_TERMS=["Software Engineer", "Full Stack Developer", "Web Developer", "JavaScript Developer"]

# Location for job search (leave empty for worldwide)
SEARCH_LOCATION="United States"

# Switch to next search term after this many applications
SWITCH_AFTER=30

# Randomize search order
RANDOMIZE_SEARCH=false

# ─────────────────────────────────────────────────────────────────────────────────
# LINKEDIN FILTERS - These match LinkedIn's filter options
# ─────────────────────────────────────────────────────────────────────────────────

# Sort by: "Most recent", "Most relevant", or ""
SORT_BY="Most recent"

# Date posted: "Any time", "Past month", "Past week", "Past 24 hours", or ""
DATE_POSTED="Past week"

# Salary filter: "$40,000+", "$60,000+", "$80,000+", "$100,000+", "$120,000+", etc
SALARY=""

# IMPORTANT: Easy Apply only - recommended to keep true
EASY_APPLY_ONLY=true

# Experience level (JSON array): "Internship", "Entry level", "Associate", "Mid-Senior level", "Director", "Executive"
EXPERIENCE_LEVEL=["Entry level", "Associate", "Mid-Senior level"]

# Job type (JSON array): "Full-time", "Part-time", "Contract", "Temporary", "Internship"
JOB_TYPE=["Full-time"]

# Work location (JSON array): "On-site", "Remote", "Hybrid"
ON_SITE=["Remote", "Hybrid"]

# Specific companies to target (JSON array, leave empty for all)
COMPANIES=[]

# Locations to filter (JSON array)
LOCATIONS=[]

# Under 10 applicants filter
UNDER_10_APPLICANTS=false

# In your network filter
IN_YOUR_NETWORK=false

# ─────────────────────────────────────────────────────────────────────────────────
# JOB FILTERING - Skip Irrelevant Jobs
# ─────────────────────────────────────────────────────────────────────────────────

# Bad words in job description - skip jobs containing these (case insensitive)
BAD_WORDS=["US Citizen", "USA Citizen", "Security Clearance", "No Sponsorship", "No C2C", "PHP", "Ruby"]

# Bad words in company about section
COMPANY_BAD_WORDS=["Staffing", "Recruiting"]

# Good words that override bad words
COMPANY_GOOD_WORDS=[]

# Do you have security clearance?
HAS_SECURITY_CLEARANCE=false

# Do you have a Masters degree?
HAS_MASTERS=true

# Your years of experience (-1 to ignore experience requirements)
CURRENT_EXPERIENCE=3

# Apply only to jobs where you strictly meet requirements?
COMPLETE_REQUIREMENTS=false

# ─────────────────────────────────────────────────────────────────────────────────
# PERSONAL INFORMATION - Used to fill Easy Apply forms
# ─────────────────────────────────────────────────────────────────────────────────

FIRST_NAME="Your"
MIDDLE_NAME=""
LAST_NAME="Name"
PHONE_NUMBER="1234567890"

# Address
CURRENT_CITY="New York"
STREET=""
STATE="New York"
ZIPCODE="10001"
COUNTRY="United States"

# US Equal Opportunity Questions (leave empty to skip)
ETHNICITY=""
GENDER=""
DISABILITY_STATUS="Decline"
VETERAN_STATUS="Decline"

# ─────────────────────────────────────────────────────────────────────────────────
# APPLICATION DETAILS - Common Easy Apply Questions
# ─────────────────────────────────────────────────────────────────────────────────

# Years of experience to answer in applications
YEARS_OF_EXPERIENCE="3"

# Visa sponsorship required?
REQUIRE_VISA="Yes"

# Portfolio/Website URL
WEBSITE=""

# LinkedIn profile URL
LINKEDIN_URL=""

# Citizenship status: "U.S. Citizen/Permanent Resident", "Non-citizen allowed to work for any employer", 
#                     "Non-citizen allowed to work for current employer", "Non-citizen seeking work authorization"
CITIZENSHIP_STATUS="Non-citizen seeking work authorization"

# Desired salary (numbers only)
DESIRED_SALARY=90000

# Salary currency (USD, EUR, HUF, GBP, etc)
SALARY_CURRENCY="USD"

# Current salary (numbers only)  
CURRENT_SALARY=0

# Notice period in days
NOTICE_PERIOD=0

# Most recent employer
RECENT_EMPLOYER=""

# Confidence level 1-10
CONFIDENCE_LEVEL="8"

# ─────────────────────────────────────────────────────────────────────────────────
# RESUME DATA - Your professional information for AI to use
# ─────────────────────────────────────────────────────────────────────────────────

# Path to your resume PDF
RESUME_PATH="./data/resume.pdf"

# LinkedIn headline
LINKEDIN_HEADLINE="Software Engineer | Full Stack Developer"

# Professional summary (use \n for line breaks)
LINKEDIN_SUMMARY="Experienced software engineer with expertise in building scalable web applications."

# Cover letter template (use \n for line breaks)
COVER_LETTER=""

# Complete user information for AI to reference when answering questions
# This should include all relevant details about you
USER_INFO="""
Your complete professional information here.
Include: skills, experience, education, projects, certifications, etc.
The AI will use this to answer application questions accurately.
"""

# ─────────────────────────────────────────────────────────────────────────────────
# AI CONFIGURATION - Gemini API for answering questions
# ─────────────────────────────────────────────────────────────────────────────────

GEMINI_API_KEY="your_gemini_api_key"
GEMINI_MODEL="gemini-2.5-flash"

# Gemini Free Tier Rate Limits (for rate limit protection)
GEMINI_RPM=5
GEMINI_RPD=20

# ─────────────────────────────────────────────────────────────────────────────────
# NOTIFICATIONS - Push notifications via ntfy.sh
# ─────────────────────────────────────────────────────────────────────────────────

NTFY_URL=https://ntfy.sh/your-topic

# ─────────────────────────────────────────────────────────────────────────────────
# ADVANCED SETTINGS
# ─────────────────────────────────────────────────────────────────────────────────

# Follow companies after applying
FOLLOW_COMPANIES=false

# Run continuously until stopped
RUN_NON_STOP=false

# Pause before submitting each application (for review)
PAUSE_BEFORE_SUBMIT=false

# Pause when a question can't be answered
PAUSE_AT_FAILED_QUESTION=false

# Click gap in seconds (for anti-detection)
CLICK_GAP=1

# Enable stealth mode (bypass anti-bot)
STEALTH_MODE=true

# Keep screen awake
KEEP_SCREEN_AWAKE=true
